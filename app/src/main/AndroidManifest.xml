<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vungtv.film">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".feature.loading.LoadingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.home.HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".feature.filtermovies.FilterMoviesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".feature.personal.PersonalActivity" />
        <activity android:name=".feature.login.LoginActivity" />
        <activity android:name=".feature.moviedetails.MovieDetailsActivity" />
        <activity android:name=".feature.setting.SettingActivity" />
        <activity android:name=".feature.userinfo.UserInfoActivity" />
        <activity android:name=".feature.changepass.ChangePassActivity" />
        <activity android:name=".feature.search.SearchActivity" />
        <activity android:name=".feature.logout.LogOutActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".feature.buyvip.BuyVipActivity" />
        <activity android:name=".feature.recharge.RechargeActivity"></activity>
    </application>

</manifest>