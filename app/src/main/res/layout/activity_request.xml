<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1"
    android:orientation="vertical">

    <com.vungtv.film.widget.VtvToolbarSetting
        android:id="@+id/request_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        app:textTitle="@string/request_text_title"/>

    <LinearLayout
        android:id="@+id/request_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <com.vungtv.film.widget.VtvEditText
            style="@style/AppTheme.Edittext.NapThe"
            android:id="@+id/request_ed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/space_128"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:padding="@dimen/margin"
            android:gravity="top|left|start"
            android:maxLines="10"
            android:maxLength="250"
            android:hint="@string/request_hint_content"/>

        <com.vungtv.film.widget.VtvButton
            android:id="@+id/request_btn_submit"
            style="@style/AppTheme.Dialog.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_36"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:text="@string/request_action_send"
            app:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
