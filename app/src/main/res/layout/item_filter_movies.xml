<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_home_row_film_root"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_home_row_film_img_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_2"
        android:scaleType="fitXY"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/default_poster"/>

    <com.vungtv.film.widget.VtvTextView
        style="@style/AppTheme.Text.FilmTitle"
        android:id="@+id/item_home_row_film_tv_film_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_home_row_film_img_poster"
        android:layout_marginTop="@dimen/space_4"
        tools:text="Tru tiên Thanh vân chí"/>

    <com.vungtv.film.widget.VtvTextView
        style="@style/AppTheme.Text.FilmTitle"
        android:id="@+id/item_home_row_film_tv_film_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_home_row_film_img_poster"
        android:layout_alignStart="@+id/item_home_row_film_img_poster"
        android:layout_margin="@dimen/space_4"
        android:padding="2dp"
        android:background="@drawable/ds_bg_white_radius"
        android:textSize="@dimen/font_tiny"
        tools:text="20/23"/>

    <LinearLayout
        android:id="@+id/item_home_row_film_layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginLeft="@dimen/space_4"
        android:layout_marginRight="@dimen/space_4"
        android:layout_alignRight="@+id/item_home_row_film_img_poster"
        android:layout_alignEnd="@+id/item_home_row_film_img_poster"
        android:orientation="vertical"/>

</RelativeLayout>