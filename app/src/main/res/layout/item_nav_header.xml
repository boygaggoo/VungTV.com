<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_nav_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    tools:background="@color/gray_9">

    <com.vungtv.film.widget.VtvCircularImageView
        android:id="@+id/item_nav_header_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginStart="@dimen/space_24"
        android:src="@drawable/icon_human2"
        app:civ_border="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"/>

    <com.vungtv.film.widget.VtvTextView
        style="@style/AppTheme.Text.FilmTitle"
        android:id="@+id/item_nav_header_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginStart="@dimen/space_16"
        android:gravity="center_vertical"
        android:textColor="@color/text_light_1"
        android:textSize="@dimen/font_normal"
        android:text="@string/login_action_login"/>

</LinearLayout>