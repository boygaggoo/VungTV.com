<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/space_56"
    android:paddingRight="@dimen/space_56"
    tools:background="@color/black_80">

    <com.vungtv.film.widget.VtvTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/text_light_1"
        android:textSize="@dimen/font_lage"
        android:text="@string/popup_text_filter_movies"
        app:textStyle="bold"/>

    <View
        android:layout_width="@dimen/space_56"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/space_24"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">

        <com.vungtv.film.widget.VtvTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_light_1"
            android:textSize="@dimen/font_normal"
            android:text="@string/popup_text_sort"/>

        <Spinner
            style="@style/AppTheme.Spinner.filter"
            android:id="@+id/pop_filter_movies_spinner_sapxep"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="2"
            android:background="@drawable/ds_border_green_radius_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">

        <com.vungtv.film.widget.VtvTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_light_1"
            android:textSize="@dimen/font_normal"
            android:text="@string/popup_text_danh_muc"/>

        <Spinner
            style="@style/AppTheme.Spinner.filter"
            android:id="@+id/pop_filter_movies_spinner_danhmuc"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="2"
            android:background="@drawable/ds_border_green_radius_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">

        <com.vungtv.film.widget.VtvTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_light_1"
            android:textSize="@dimen/font_normal"
            android:text="@string/popup_text_quoc_gia"/>

        <Spinner
            style="@style/AppTheme.Spinner.filter"
            android:id="@+id/pop_filter_movies_spinner_quocgia"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="2"
            android:background="@drawable/ds_border_green_radius_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">

        <com.vungtv.film.widget.VtvTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_light_1"
            android:textSize="@dimen/font_normal"
            android:text="@string/popup_text_the_loai"/>

        <Spinner
            style="@style/AppTheme.Spinner.filter"
            android:id="@+id/pop_filter_movies_spinner_theloai"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="2"
            android:background="@drawable/ds_border_green_radius_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">

        <com.vungtv.film.widget.VtvTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_light_1"
            android:textSize="@dimen/font_normal"
            android:text="@string/popup_text_year"/>

        <Spinner
            style="@style/AppTheme.Spinner.filter"
            android:id="@+id/pop_filter_movies_spinner_nam"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="2"
            android:background="@drawable/ds_border_green_radius_2" />

    </LinearLayout>

    <com.vungtv.film.widget.VtvButton
        android:id="@+id/pop_filter_movies_btn_submit"
        android:layout_width="@dimen/space_72"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/space_12"
        android:background="@drawable/ds_touchable_bg_green_radius"
        android:textColor="@color/text_light_1"
        android:textSize="@dimen/font_normal"
        android:textAllCaps="true"
        android:text="@string/popup_action_filter"
        app:textStyle="bold"/>

</LinearLayout>