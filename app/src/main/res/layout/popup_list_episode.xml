<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="400dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:layout_gravity="center"
    tools:background="@color/gray_1">

    <com.vungtv.film.widget.VtvEditText
        style="@style/AppTheme.SearchView.Dark"
        android:id="@+id/pop_eps_searview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_36"
        android:layout_margin="@dimen/space_16"
        android:layout_gravity="center_horizontal"
        android:minWidth="300dp"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:inputType="number"
        android:focusable="false"
        tools:text=""/>

    <com.vungtv.film.widget.VtvAutoFitRecyclerView
        android:id="@+id/pop_eps_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:padding="@dimen/margin"
        android:columnWidth="@dimen/popup_episode_item_size_w"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"/>

</LinearLayout>