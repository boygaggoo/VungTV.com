<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/popup_size_w"
    tools:layout_gravity="center"
    tools:background="@drawable/ds_bg_gray1_boder_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/space_20"
        android:background="@color/green">

        <com.vungtv.film.widget.VtvCircularImageView
            android:layout_width="@dimen/space_56"
            android:layout_height="@dimen/space_56"
            android:src="@drawable/icon_human2"/>

    </LinearLayout>

    <com.vungtv.film.widget.VtvEditText
        style="@style/AppTheme.Dialog.Material.Edittext"
        android:id="@+id/pop_changename_ed_name"
        android:gravity="center"
        android:maxLength="30"
        android:hint="@string/popup_text_hint_input_name" />

    <com.vungtv.film.widget.VtvButton
        android:id="@+id/pop_changename_submit"
        style="@style/AppTheme.Dialog.Material.Button"
        android:layout_gravity="right|end"
        android:text="@string/popup_action_change_name"
        app:textStyle="bold"/>

</LinearLayout>