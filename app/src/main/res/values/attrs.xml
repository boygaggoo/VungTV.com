<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom font -->
    <declare-styleable name="VtvFont">
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="italic" value="1" />
            <flag name="bold" value="2" />
            <flag name="light" value="3" />
            <flag name="bold_italic" value="4" />
            <flag name="light_italic" value="5" />
        </attr>
        <attr name="font">
            <flag name="roboto" value="0" />
            <flag name="qicksand" value="1" />
        </attr>
    </declare-styleable>

    <!-- Circular ImageView -->
    <declare-styleable name="VtvCircularImageView">
        <attr name="civ_background" format="color"/>
        <attr name="civ_border" format="boolean"/>
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_shadow" format="boolean"/>
        <attr name="civ_shadow_color" format="color"/>
        <attr name="civ_shadow_radius" format="float"/>
    </declare-styleable>

    <declare-styleable name="VtvDrawerLayout">
        <attr name="lock_open" format="boolean" />
    </declare-styleable>

    <declare-styleable name="VtvMoviesRowView">
        <attr name="style">
            <flag name="defaultStyle" value="0" />
            <flag name="black" value="1" />
            <flag name="gray" value="2" />
            <flag name="black_no_title" value="3" />
            <flag name="black_no_filmname" value="4" />
        </attr>

        <attr name="itemType">
            <flag name="defaultType" value="0" />
            <flag name="recomment" value="1" />
            <flag name="recent" value="2" />
            <flag name="comming" value="3" />
        </attr>

        <attr name="iconTitle" format="integer|reference" />

        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="VtvTwoTextView">
        <attr name="textLeft" format="string" />
        <attr name="textRight" format="string" />
        <attr name="iconLeft" format="reference|integer" />
        <attr name="iconRight" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="VtvToolbar">
        <attr name="textTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandDrawable" format="reference"/>
        <attr name="collapseDrawable" format="reference"/>
    </declare-styleable>

</resources>